export ROOT="$HOME"

dbgon() {
    export CONFIG=debug
    export VERBOSITY=DEBUG
    export LOGGER_LEVEL="$VERBOSITY"
    export LOGURU_LEVEL="$VERBOSITY"
}
dbgoff() {
    export CONFIG=release
    unset LOGGER_LEVEL
    unset LOGURU_LEVEL
}

dbgon && eval "`ondir /`"
