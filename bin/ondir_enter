#!/usr/bin/env bash

ROOT=`git rev-parse --show-toplevel`
export MOD_HOME=$ROOT
export PYTHONPATH=$ROOT

[ -f $HOME/dev/bin/activate ] && source $HOME/dev/bin/activate
[ -f shared/local_setup.sh ] && source shared/local_setup.sh

git status -sb
echo "\n Environment Variables:"
echo " - CONFIG=$CONFIG"
echo "\n \033[0;35m Changed MOD_HOME to $ROOT ... \033[0m \n"